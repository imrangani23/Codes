//+++++++++++ INITIATE +++++++++++++++++

setOptionBox(labelText:String, boxWidth:Number, clip:MovieClip);
setInputBox(maxChar:Number, boxWidth:Number, clip:MovieClip);
setWorkingBox(maxChar:Number, boxWidth:Number, clip:MovieClip);

